{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Effect": "Allow",
			"Action": [
				"ssm:GetParameter",
				"ssm:GetParametersByPath"
			],
			"Resource": [
				"arn:aws:ssm:${region}:${account_id}:parameter/ci/main/security-*"
			]
		},
		{
			"Sid": "CanCreateCloudCustodianFunctions",
			"Effect": "Allow",
			"Action": [
				"lambda:CreateFunction",
				"lambda:TagResource",
				"events:DescribeRule",
				"events:EnableRule",
				"lambda:GetFunction",
				"events:PutRule",
				"lambda:UpdateFunctionConfiguration",
				"lambda:UpdateAlias",
				"lambda:UpdateFunctionCode",
				"events:PutTargets",
				"iam:PassRole",
				"lambda:AddPermission",
				"lambda:ListTags",
				"lambda:GetAlias",
				"events:ListTargetsByRule",
				"lambda:CreateAlias"
			],
			"Resource": "*"
		},
		{
			"Effect": "Allow",
			"Action": [
				"ec2:DescribeNetworkInterfaces",
				"tag:GetResources",
				"ec2:DescribeSecurityGroupReferences",
				"ec2:DescribeVolumes",
				"rds:DescribeDBInstances",
				"logs:DescribeLogGroups",
				"logs:DeleteRetentionPolicy",
				"logs:PutRetentionPolicy",
				"iam:ListRoles",
				"iam:ListGroups",
				"ecs:DescribeClusters",
				"iam:ListInstanceProfiles",
				"ec2:Describe*",
				"s3:Get*",
				"s3:List",
				"iam:ListUsers",
				"iam:Policies",
				"iam:GetCredentialReport",
				"iam:ListPolicies",
				"iam:GenerateCredentialReport",
				"iam:GetPolicyVersion",
				"iam:ListAccountAliases",
				"logs:*",
				"sqs:*"
			],
			"Resource": "*"
		}
	]
}
